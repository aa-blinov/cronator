# Example environment configuration
# Copy this file to .env and update the values

# Application
APP_NAME=Cronator
DEBUG=false
HOST=0.0.0.0
PORT=8080

# Authentication (CHANGE THESE IN PRODUCTION!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-your-admin-password-here
SECRET_KEY=change-me-to-random-256-bit-key-in-production

# Database
# For local development (SQLite):
DATABASE_URL=sqlite+aiosqlite:///./data/cronator.db
# For Docker/Production (PostgreSQL) - will be overridden by docker-compose:
# DATABASE_URL=postgresql+asyncpg://cronator:${POSTGRES_PASSWORD}@db:5432/cronator

# PostgreSQL Password (used in docker-compose.yml)
POSTGRES_PASSWORD=change-your-postgres-password-here

# Directories
SCRIPTS_DIR=./scripts
ENVS_DIR=./envs
LOGS_DIR=./logs
DATA_DIR=./data

# Email Alerts
SMTP_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM=cronator@yourdomain.com
SMTP_USE_TLS=true
ALERT_EMAIL=alerts@yourdomain.com

# Git Sync
GIT_ENABLED=false
GIT_REPO_URL=https://github.com/yourusername/your-scripts-repo.git
GIT_BRANCH=main
GIT_TOKEN=ghp_yourPersonalAccessTokenHere
GIT_SYNC_INTERVAL=300
GIT_SCRIPTS_SUBDIR=cronator-scripts

# Execution
DEFAULT_TIMEOUT=3600
MAX_LOG_SIZE=1000000

# UV (Python package manager)
UV_PATH=uv

# Backup Configuration (for db-backup service)
BACKUP_RETENTION_DAYS=7
