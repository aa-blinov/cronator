# Example environment configuration
# Copy this file to .env and update the values

# Application
APP_NAME=Cronator
DEBUG=false
HOST=0.0.0.0
PORT=8080

# Authentication (CHANGE THESE IN PRODUCTION!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin
SECRET_KEY=change-me-in-production-please

# Database
DATABASE_URL=sqlite+aiosqlite:///./data/cronator.db

# Directories
SCRIPTS_DIR=./scripts
ENVS_DIR=./envs
LOGS_DIR=./logs
DATA_DIR=./data

# Email Alerts
SMTP_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=
SMTP_USE_TLS=true
ALERT_EMAIL=

# Git Sync
GIT_ENABLED=false
GIT_REPO_URL=
GIT_BRANCH=main
GIT_TOKEN=
GIT_SYNC_INTERVAL=300
GIT_SCRIPTS_SUBDIR=

# Execution
DEFAULT_TIMEOUT=3600
MAX_LOG_SIZE=1000000

# UV
UV_PATH=uv
